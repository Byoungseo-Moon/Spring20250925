<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.mapper.StudentMapper">
	<select id="studentInfo" parameterType="hashmap" resultType="com.example.test1.model.Student">
		SELECT *
		FROM STUDENT
		WHERE STU_NAME = #{keyword}
	</select>
	
	<select id="studentList" parameterType="hashmap" resultType="com.example.test1.model.Student">
		SELECT *
		FROM STUDENT		
	</select>
	
	<delete id="deleteStudent" parameterType="hashmap">
		DELETE FROM STUDENT
		WHERE STU_NO = #{stuNo}		
	</delete>	
	
	<select id="selectStudent" parameterType="hashmap" resultType="com.example.test1.model.Student" >
		SELECT S.STU_NO, S.STU_NAME, S.STU_DEPT, AVG_GRADE
		FROM STUDENT S
		INNER JOIN(
			SELECT STU_NO, AVG(ENR_GRADE) AS AVG_GRADE
			FROM ENROL
			GROUP BY STU_NO
		)T ON S.STU_NO = T.STU_NO		
		
	</select>
	
</mapper>




